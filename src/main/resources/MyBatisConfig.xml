<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
        PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
    <typeAliases>
        <typeAlias type="vu.lt.myBatis.model.Guide" alias="Guide"/>
        <typeAlias type="vu.lt.myBatis.model.Trip" alias="Trip"/>
    </typeAliases>
    <environments default="development">
        <environment id="development">
            <transactionManager type="MANAGED"/>
            <dataSource type="JNDI">
                <property name="data_source" value="openejb:Resource/TripDataSource"/>
            </dataSource>
        </environment>
    </environments>
    <mappers>
        <mapper resource="mybatis.xml/GuideMapper.xml"/>
        <mapper resource="mybatis.xml/TripMapper.xml"/>
    </mappers>
</configuration>
